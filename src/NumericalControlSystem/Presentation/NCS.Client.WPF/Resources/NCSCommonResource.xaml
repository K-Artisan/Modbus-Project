    <!-- 
    ***************************************************************************
    Brushes
    ***************************************************************************
    -->

    <helpers:ColorList x:Key="FolderColors">
        <Color>#00acff</Color>
        <Color>#357e7f</Color>
        <Color>#529010</Color>
        <Color>#b1c70c</Color>
        <Color>#ffc211</Color>
        <Color>#fb791a</Color>
        <Color>#f24e22</Color>
        <Color>#da1a4c</Color>
        <Color>#00FFFFFF</Color>
    </helpers:ColorList>

    <DrawingBrush x:Key="MyWireBrushResource" Viewport="0,0,10,10" ViewportUnits="Absolute" TileMode="Tile">
        <DrawingBrush.Drawing>
            <DrawingGroup>
                <DrawingGroup.Children>
                    <GeometryDrawing Geometry="M0,0 L1,0 1,0.1, 0,0.1Z" Brush="#66CCCCFF" />
                    <GeometryDrawing Geometry="M0,0 L0,1 0.1,1, 0.1,0Z" Brush="#66CCCCFF" />
                </DrawingGroup.Children>
            </DrawingGroup>
        </DrawingBrush.Drawing>
    </DrawingBrush>

    <LinearGradientBrush x:Key="BlackToGrayBrush" StartPoint="0.5,0" EndPoint="0.5,1">
        <LinearGradientBrush.GradientStops>
            <GradientStop Offset="0.0" Color="Black" />
            <GradientStop Offset="1.0" Color="#666666" />
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="WhiteSmokeBrush" StartPoint="0.5,0" EndPoint="0.5,1">
        <LinearGradientBrush.GradientStops>
            <GradientStop Offset="0.0" Color="WhiteSmoke" />
            <GradientStop Offset="1.0" Color="#666666" />
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="WhiteSmokeToGrayBrush" StartPoint="0.5,0" EndPoint="0.5,1">
        <LinearGradientBrush.GradientStops>
            <GradientStop Offset="0.0" Color="WhiteSmoke" />
            <GradientStop Offset="2." Color="Black" />
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>
    
