<Window x:Class="Azir.Modbus.Client.WPF.UserControls.NCSAbout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ncsControls="clr-namespace:Azir.Modbus.Client.WPF.Controls">
    <Grid Background="#8000" Cursor="Hand" MouseLeftButtonDown="Grid_MouseLeftButtonDown">

        <Grid  Margin="0,-50,-50,0" VerticalAlignment="Center" HorizontalAlignment="Center" >
            <ncsControls:PixelAlignedImage Source="/Azir.Modbus.Client.WPF;Component/Resources/Images/about.png"/>
            <Button x:Name="PixelLabButton" Click="PixelLabButton_Click" 
                    Style="{DynamicResource InvisibleButton}" 
                    HorizontalAlignment="Left" VerticalAlignment="Bottom"
                    Width="120" Margin="43,0,0,85" Height="38" Cursor="Hand" />
            <Button x:Name="SelaButton" Click="SelaButton_Click"
                    Style="{DynamicResource InvisibleButton}" 
                    VerticalAlignment="Bottom" Margin="211,0,97,85" Height="38" Cursor="Hand" />
        </Grid>

    </Grid>
</Window>
